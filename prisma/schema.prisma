model User {
  id     String  @id @unique
  active Boolean

  firstName String
  lastName  String
  email     String  @unique
  password  String
  siteAdmin Boolean

  contributorAssignments          Contributor[]
  PartnerOrgAdminAssignments      PartnerOrg[]
  ResearchProjectAdminAssignments ResearchProject[]
  Submissions                     IKCReport[]
}

model Contributor {
  id String @id

  userId            String
  User              User            @relation(fields: [userId], references: [id])
  partnerOrgId      String
  PartnerOrg        PartnerOrg      @relation(fields: [partnerOrgId], references: [id])
  researchProjectId String
  ResearchProject   ResearchProject @relation(fields: [researchProjectId], references: [id])

  hourlyRate    Float
  benRatePer    Float
  contributions ContribItem[]

  @@unique([userId, partnerOrgId])
}

model PartnerOrg {
  id               String            @id
  ResearchProjects ResearchProject[]

  name         String
  admins       User[]
  contributors Contributor[]
}

model HourContribution {
  ContribItem   ContribItem @relation(fields: [contribItemId], references: [id])
  contribItemId String      @id @unique

  hours      Float
  hourlyRate Float
  benRatePer Float
}

model OtherContribution {
  ContribItem   ContribItem @relation(fields: [contribItemId], references: [id])
  contribItemId String      @id @unique

  itemName String
  value    Float
  items    Int
}

model ContribItem {
  id            String      @id
  Contributor   Contributor @relation(fields: [contributorId], references: [id])
  contributorId String
  IKCReport     IKCReport?  @relation(fields: [ikcReportId], references: [id])
  ikcReportId   String?

  date              DateTime
  details           String
  hourContribution  HourContribution?
  otherContribution OtherContribution?
}

model IKCReport {
  id                String           @id
  partnerOrgId      String
  ResearchProject   ResearchProject? @relation(fields: [researchProjectId], references: [id])
  researchProjectId String?
  reportStartDate   DateTime
  reportEndDate     DateTime
  Contributions     ContribItem[]
  submitterId       String?
  submitter         User?            @relation(fields: [userId], references: [id])
  submissionDate    DateTime?
  isApproved        Boolean?
  approverId        String?
  approvalDate      DateTime?
  userId            String
}

model ResearchProject {
  id String @id

  projectTitle    String
  startDate       DateTime
  endDate         DateTime
  admins          User[]
  projectPartners PartnerOrg[]
  ikcReports      IKCReport[]
  Contributor     Contributor[]
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
